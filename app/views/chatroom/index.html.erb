<h2 class="ui center aligned icon header">
  <i class="circular paper plane blue inverted icon"></i>
  Chatroom
</h2>
<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui small feed">
                    <%= render @messages%>
                </div>
            </div>
            <div class="extra content">
                <%= form_for( @message, html: {class: "ui reply form", role: "form"}, url: message_path) do |f| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body %>
                            <%= f.button '<i class="border inverted blue edit icon"></i>'.html_safe %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="item">
                        Account
                    </a>
                    <a class="item">
                        Settings
                    </a>
                    <div class="ui dropdown item">
                        <i class="dropdown icon"></i>
                        Display Options
                        <div class="menu">
                            <div class="header">Text Size</div>
                            <a class="item">Small</a>
                            <a class="item">Medium</a>
                            <a class="item">Large</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>